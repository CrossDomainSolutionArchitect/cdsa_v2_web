@page
@model ApplyModel
@{
    ViewData["Title"] = "Apply";
}

<!-- Apply Hero Section -->
<section class="apply-hero py-5">
    <div class="container text-center">
        <h1 class="hero-title mb-3">Apply for CDSA Skills Training</h1>
        <p class="hero-subtitle mb-4">
            Take the first step towards transforming your future with free,
            world-class digital skills training.
        </p>
        <div class="apply-badge">
            <span class="badge-text">Applications Open</span>
        </div>
    </div>
</section>

<!-- Application Requirements -->
<section class="requirements-section py-5 bg-light-blue-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Who Can Apply?</h2>
            <p class="section-subtitle">We're looking for motivated individuals ready to learn</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="requirement-card">
                    <div class="requirement-icon">✓</div>
                    <h3 class="requirement-title">Age Requirement</h3>
                    <p class="requirement-text">18-35 years old (South African youth)</p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="requirement-card">
                    <div class="requirement-icon">✓</div>
                    <h3 class="requirement-title">Education</h3>
                    <p class="requirement-text">Grade 12 (Matric) certificate or equivalent</p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="requirement-card">
                    <div class="requirement-icon">✓</div>
                    <h3 class="requirement-title">Commitment</h3>
                    <p class="requirement-text">Willing to dedicate time to self-paced learning</p>
                </div>
            </div>

            <div class="col-md-6">
                <div class="requirement-card">
                    <div class="requirement-icon">✓</div>
                    <h3 class="requirement-title">Access</h3>
                    <p class="requirement-text">Internet connection and device for online learning</p>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <p class="fs-5 fw-bold text-primary">
                No prior tech experience required – just bring your passion to learn!
            </p>
        </div>
    </div>
</section>

<!-- Program Selection -->
<section class="program-selection-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Choose Your Learning Path</h2>
            <p class="section-subtitle">Select the program that aligns with your career goals</p>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-4">
                <div class="program-option-card">
                    <div class="program-option-badge">Digital Transformation & ICT</div>
                    <h3 class="program-option-title">Cloud & Digital Skills</h3>
                    <ul class="program-option-list">
                        <li>Digital Transformation</li>
                        <li>Blockchain Basics</li>
                        <li>Cloud Computing</li>
                        <li>Containers & Kubernetes</li>
                    </ul>
                    <p class="program-option-duration">Self-paced | Online</p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="program-option-card">
                    <div class="program-option-badge">Data Science & Analytics</div>
                    <h3 class="program-option-title">Data & Analytics</h3>
                    <ul class="program-option-list">
                        <li>Introduction to Data Science</li>
                        <li>Data Analysis with Python</li>
                        <li>Data Visualization</li>
                        <li>Real-world Projects</li>
                    </ul>
                    <p class="program-option-duration">Self-paced | Online</p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="program-option-card">
                    <div class="program-option-badge">AI & Machine Learning</div>
                    <h3 class="program-option-title">Artificial Intelligence</h3>
                    <ul class="program-option-list">
                        <li>AI for Everyone</li>
                        <li>Machine Learning Fundamentals</li>
                        <li>Practical AI Applications</li>
                        <li>Portfolio Building</li>
                    </ul>
                    <p class="program-option-duration">Self-paced | Online</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Application Process -->
<section class="process-section py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Application Process</h2>
            <p class="section-subtitle">Simple steps to start your journey</p>
        </div>

        <div class="row g-4 justify-content-center">
            <div class="col-lg-3 col-md-6">
                <div class="process-step">
                    <div class="process-number">1</div>
                    <h3 class="process-title">Apply</h3>
                    <p class="process-text">Complete the online application form below</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="process-step">
                    <div class="process-number">2</div>
                    <h3 class="process-title">Review</h3>
                    <p class="process-text">We'll review your application within 5-7 days</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="process-step">
                    <div class="process-number">3</div>
                    <h3 class="process-title">Onboard</h3>
                    <p class="process-text">Get access credentials and orientation materials</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="process-step">
                    <div class="process-number">4</div>
                    <h3 class="process-title">Learn</h3>
                    <p class="process-text">Start learning and building your skills!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Application Form CTA -->
<section class="apply-cta-section py-5">
    <div class="container">
        <div class="apply-cta-box">
            <div class="text-center mb-4">
                <h2 class="cta-title mb-3">Ready to Get Started?</h2>
                <p class="cta-subtitle mb-4">
                    Complete your application now and join hundreds of South African youth
                    transforming their futures through digital skills.
                </p>
            </div>

            <div class="text-center">
                <a href="https://docs.google.com/forms/d/e/1FAIpQLSc-sHP3R5VZzGrNVEv4ajf1F3LkCOsweXJA9Ni8i9MHAl6V4w/viewform?usp=dialog" target="_blank" class="mzp-c-button btn-primary btn-lg mb-3">
                    Complete Application Form
                </a>
                <p class="text-muted small">Application takes approximately 10 minutes to complete</p>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section py-5 bg-light-blue-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Frequently Asked Questions</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h3 class="accordion-header" id="faqOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Is the program really free?
                            </button>
                        </h3>
                        <div id="collapseOne" class="accordion-collapse collapse show"
                             aria-labelledby="faqOne" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Yes! The program is completely free. There are no hidden costs,
                                registration fees, or charges. Our mission is to make quality
                                digital skills training accessible to all South African youth.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h3 class="accordion-header" id="faqTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Do I need previous tech experience?
                            </button>
                        </h3>
                        <div id="collapseTwo" class="accordion-collapse collapse"
                             aria-labelledby="faqTwo" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                No prior tech experience is required! Our programs start from the fundamentals
                                and progress at a pace suitable for beginners. All you need is a willingness
                                to learn and commitment to completing the coursework.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h3 class="accordion-header" id="faqThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                How long does the program take?
                            </button>
                        </h3>
                        <div id="collapseThree" class="accordion-collapse collapse"
                             aria-labelledby="faqThree" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                The program is self-paced, so you can complete it according to your own schedule.
                                Most students complete their chosen learning path within 3-6 months, dedicating
                                10-15 hours per week to coursework.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h3 class="accordion-header" id="faqFour">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Will I receive a certificate?
                            </button>
                        </h3>
                        <div id="collapseFour" class="accordion-collapse collapse"
                             aria-labelledby="faqFour" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Yes! Upon successful completion of courses, you'll receive industry-recognized
                                certificates from IBM Cognitive Class that you can add to your CV and LinkedIn profile.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h3 class="accordion-header" id="faqFive">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                What happens after I complete the program?
                            </button>
                        </h3>
                        <div id="collapseFive" class="accordion-collapse collapse"
                             aria-labelledby="faqFive" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Graduates receive career guidance, job placement support, and access to our
                                alumni network. We also connect you with potential employers and opportunities
                                in the tech industry.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-5">
            <p class="fs-5">Still have questions?</p>
            <a href="https://wa.me/27762201837?text=Hi%20CDSA,%20I%20have%20questions%20about%20applying"
               target="_blank" class="mzp-c-button btn-outline">
                Contact Us on WhatsApp
            </a>
        </div>
    </div>
</section>