@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!-- Hero Section -->
<section class="hero-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="fade-in-left">
                    <h1 class="hero-title">Empowering Communities with Technology & Skills</h1>
                    <p class="hero-subtitle">
                        CDSA is a South African startup driving change through Skills Development, 
                        innovative IT solutions, and AI-driven products. Our mission is to leverage 
                        government seed funding and global partnerships to create sustainable impact.
                    </p>
                    <div class="hero-buttons mt-3">
                        <a href="#offerings" class="mzp-c-button btn-primary btn-large me-2">
                            Explore Our Work
                        </a>
                        <a href="#contact" class="mzp-c-button btn-outline btn-large">
                            Get in Touch
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="fade-in-right">
                    <img src="https://momentumalliance.org/wp-content/uploads/2024/11/images-2024-04-15T144129.352-jpeg.webp"
                         alt="Empowering through tech" class="img-fluid rounded hero-img">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- What We Do Section -->
<section id="offerings" class="py-5 bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">What We Offer</h2>
            <p class="section-subtitle">
                CDSA builds impactful solutions in collaboration with government, 
                corporates, and communities.
            </p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm h-100">
                    <img src="https://media.licdn.com/dms/image/v2/D5612AQHopR0IsqP_BA/article-cover_image-shrink_600_2000/article-cover_image-shrink_600_2000/0/1704263535002?e=2147483647&v=beta&t=DfjZtO6B-80P22dr7TmsLdnc0oSg_tnKeq5qPb5qXd4"
                         alt="Skills Development" class="card-img-top rounded">
                    <div class="card-body">
                        <h3 class="card-title">Skills Development</h3>
                        <p class="card-text">
                            Accredited training through QCTO and collaborations with IBM, Microsoft, 
                            and global partners to close South Africa’s digital skills gap.
                        </p>
                        <a href="#contact" class="mzp-c-button btn-outline btn-sm mt-2">Partner with us</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm h-100">
                    <img src="https://synergiseit.com.au/wp-content/uploads/2023/08/IT-Soutions.png"
                         alt="IT Solutions" class="card-img-top rounded">
                    <div class="card-body">
                        <h3 class="card-title">IT Solutions</h3>
                        <p class="card-text">
                            Developing custom platforms and AI solutions for government and 
                            enterprises like GEP to streamline services and deliver impact.
                        </p>
                        <a href="#contact" class="mzp-c-button btn-outline btn-sm mt-2">See how we can help</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card shadow-sm h-100">
                    <img src="https://tse1.mm.bing.net/th/id/OIP.PB8SAp5ZRMYfOWYOcPXc7QHaD4?rs=1&pid=ImgDetMain&o=7&rm=3"
                         alt="AI Startup" class="card-img-top rounded">
                    <div class="card-body">
                        <h3 class="card-title">AI Startup</h3>
                        <p class="card-text">
                            Building innovative AI-driven products, supported by 
                            seed funding and designed to empower communities with smarter tools.
                        </p>
                        <a href="#contact" class="mzp-c-button btn-outline btn-sm mt-2">Learn more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action / Contact -->
<section id="contact" class="cta-section py-5">
    <div class="container text-center">
        <h2 class="cta-title mb-3">Let’s Collaborate</h2>
        <p class="cta-subtitle mb-4">
            We’re actively seeking partners, funders, and collaborators to expand 
            our skills development and technology initiatives.
        </p>
        <div class="cta-buttons">
            <a href="mailto:info@cdsa.co.za" class="mzp-c-button btn-primary me-2 mb-2">
                Email Us
            </a>
            <a href="https://www.linkedin.com" target="_blank" class="mzp-c-button btn-outline mb-2">
                LinkedIn
            </a>
        </div>
    </div>
</section>
