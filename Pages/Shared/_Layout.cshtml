    <script>
        // Mobile menu toggle
        const menuBtn = document.getElementById('menuBtn');
        const navMenu = document.getElementById('navMenu');

        menuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });
            // Board Members Modal functionality
        const boardMembersLink = document.getElementById('boardMembersLink');
        const boardModal = document.getElementById('boardMembersModal');
        const closeModal = document.getElementById('closeModal');
        const memberSelect = document.getElementById('memberSelect');

        // Open modal when Board Members link is clicked
        boardMembersLink.addEventListener('click', (e) => {
            e.preventDefault();
            boardModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        });

        // Close modal when X is clicked
        closeModal.addEventListener('click', () => {
            boardModal.style.display = 'none';
            document.body.style.overflow = 'auto';
            memberSelect.value = '';
            hideAllProfiles();
        });

        // Close modal when clicking outside
        boardModal.addEventListener('click', (e) => {
            if (e.target === boardModal) {
                boardModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                memberSelect.value = '';
                hideAllProfiles();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && boardModal.style.display === 'block') {
                boardModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                memberSelect.value = '';
                hideAllProfiles();
            }
        });

        // Handle member selection
        memberSelect.addEventListener('change', (e) => {
            const selectedMember = e.target.value;
            hideAllProfiles();

            if (selectedMember) {
                const profileElement = document.getElementById(selectedMember + 'Profile');
                if (profileElement) {
                    profileElement.classList.add('active');
                }
            }
        });

        // Function to hide all member profiles
        function hideAllProfiles() {
            const allProfiles = document.querySelectorAll('.member-profile');
            allProfiles.forEach(profile => {
                profile.classList.remove('active');
            });
        }
    </script>

