    <script>
               // Replace the script section in your layout.cshtml with this:

        // Mobile menu toggle
        const menuBtn = document.getElementById('menuBtn');
        const navMenu = document.getElementById('navMenu');

        menuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });

        // Mobile dropdown toggles
        document.addEventListener('DOMContentLoaded', function() {
            // Only add click handlers for mobile
            if (window.innerWidth <= 768) {
                const dropdownItems = document.querySelectorAll('.mzp-has-dropdown');

                dropdownItems.forEach(item => {
                    const title = item.querySelector('.mzp-c-menu-title');

                    title.addEventListener('click', function(e) {
                        // If we're on mobile and this is a dropdown parent
                        if (window.innerWidth <= 768 && item.classList.contains('mzp-has-dropdown')) {
                            e.preventDefault();

                            // Toggle the active class
                            item.classList.toggle('active');

                            // Close other dropdowns
                            dropdownItems.forEach(otherItem => {
                                if (otherItem !== item) {
                                    otherItem.classList.remove('active');
                                }
                            });
                        }
                    });
                });
            }
        });

        // Handle window resize
        let resizeTimer;
        window.addEventListener('resize', function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                // Remove active classes when switching to desktop
                if (window.innerWidth > 768) {
                    document.querySelectorAll('.mzp-has-dropdown').forEach(item => {
                        item.classList.remove('active');
                    });
                }
            }, 250);
        });
            
    </script>

