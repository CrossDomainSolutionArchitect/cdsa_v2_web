@page
@model EcoHubModel
@{
    ViewData["Title"] = "Eco-Creative Hub";
}

<!-- Hero Section -->
<section class="ecohub-hero py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="hero-title mb-4">
                    Township Upcycling Hub Powered by Digital Payments
                </h1>
                <p class="hero-lead mb-4">
                    Turning waste into value, and cash into cashless inclusivity —
                    a green economy meets fintech innovation.
                </p>
                <div class="hero-tags mb-4">
                    <span class="tag-badge">Circular Economy</span>
                    <span class="tag-badge">Digital Inclusion</span>
                    <span class="tag-badge">Job Creation</span>
                    <span class="tag-badge">Township Innovation</span>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="hero-stats-card">
                    <div class="stat-item">
                        <div class="stat-number">100%</div>
                        <div class="stat-label">Waste Diversion</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">20+</div>
                        <div class="stat-label">Jobs Created</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">Digital</div>
                        <div class="stat-label">Cashless Economy</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Visual Overview Section with Flyer -->
<section class="flyer-section py-5 bg-white">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="section-title">Project Overview</h2>
            <p class="section-subtitle">Comprehensive visual breakdown of our eco-creative model</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="flyer-container">
                    <img src="~/images/ChatGPT Image Oct 2, 2025, 05_32_49 AM.png" alt="Eco-Creative Hub Project Overview" class="flyer-image">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- The Opportunity Section -->
<section class="opportunity-section py-5 bg-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="opportunity-card problem-card">
                    <h3 class="card-title">The Challenge</h3>
                    <ul class="challenge-list">
                        <li>Townships generate tons of waste with limited recycling infrastructure</li>
                        <li>High unemployment rates, particularly among youth</li>
                        <li>Cash-based informal economy limits financial inclusion</li>
                        <li>Limited access to manufacturing equipment and technology</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="opportunity-card solution-card">
                    <h3 class="card-title">Our Solution</h3>
                    <ul class="solution-list">
                        <li>Convert waste materials into high-value upcycled products</li>
                        <li>Create sustainable employment in circular manufacturing</li>
                        <li>Integrate digital payments for suppliers, artisans & customers</li>
                        <li>Build a tech-enabled SMME platform for township economy</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works-section py-5 bg-light-blue-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">How It Works</h2>
            <p class="section-subtitle">A circular economy powered by digital innovation</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="workflow-step">
                    <div class="step-icon">♻️</div>
                    <div class="step-number">01</div>
                    <h4 class="step-title">Waste Collection</h4>
                    <p class="step-description">
                        Local waste pickers supply materials (plastics, wood, textiles)
                        and receive digital payments via QR code or mobile wallet.
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="workflow-step">
                    <div class="step-icon">🔧</div>
                    <div class="step-number">02</div>
                    <h4 class="step-title">Digital Fabrication</h4>
                    <p class="step-description">
                        Materials are transformed using 3D printers, laser cutters,
                        and sewing machines into furniture, décor, and fashion items.
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="workflow-step">
                    <div class="step-icon">💳</div>
                    <div class="step-number">03</div>
                    <h4 class="step-title">Cashless Sales</h4>
                    <p class="step-description">
                        Customers purchase products at markets, pop-ups, or online
                        using integrated digital payment platforms.
                    </p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="workflow-step">
                    <div class="step-icon">📊</div>
                    <div class="step-number">04</div>
                    <h4 class="step-title">Data & Scale</h4>
                    <p class="step-description">
                        Every transaction builds verifiable economic activity records,
                        enabling access to further funding and market opportunities.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Business Model Section -->
<section class="business-model-section py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Dual Business Model</h2>
            <p class="section-subtitle">Manufacturing + FinTech Integration</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="model-card">
                    <div class="model-header">
                        <h3 class="model-title">Unit A: Circular Upcycling Workshop</h3>
                    </div>
                    <div class="model-content">
                        <h5 class="content-subtitle">Products</h5>
                        <ul class="model-list">
                            <li>Furniture from reclaimed wood & plastic composites</li>
                            <li>Home décor from textile waste</li>
                            <li>Fashion accessories from upcycled materials</li>
                            <li>Custom manufacturing for corporate clients</li>
                        </ul>
                        <h5 class="content-subtitle mt-3">Revenue Streams</h5>
                        <ul class="model-list">
                            <li>Direct-to-consumer sales at markets & online</li>
                            <li>Wholesale to retailers & design stores</li>
                            <li>Corporate B2B orders & custom projects</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="model-card">
                    <div class="model-header">
                        <h3 class="model-title">Unit B: Digital Payments Platform</h3>
                    </div>
                    <div class="model-content">
                        <h5 class="content-subtitle">Phase 1: Internal</h5>
                        <ul class="model-list">
                            <li>Cashless payments for waste suppliers</li>
                            <li>Digital receipts for all transactions</li>
                            <li>QR code integration (SnapScan, Yoco, Ozow)</li>
                            <li>WhatsApp Business API for confirmations</li>
                        </ul>
                        <h5 class="content-subtitle mt-3">Phase 2: Township-Wide</h5>
                        <ul class="model-list">
                            <li>Progressive Web App (PWA) for digital wallets</li>
                            <li>Loyalty points & incentive programs</li>
                            <li>Platform expansion to other township SMMEs</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Implementation Roadmap -->
<section class="roadmap-section py-5 bg-light-blue-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Implementation Roadmap</h2>
            <p class="section-subtitle">12-Month Path to Sustainability</p>
        </div>

        <div class="timeline-roadmap">
            <div class="roadmap-phase">
                <div class="phase-header">
                    <span class="phase-badge">Phase 1</span>
                    <span class="phase-duration">Months 1-3</span>
                </div>
                <div class="phase-content">
                    <h4 class="phase-title">Foundation & Pilot</h4>
                    <ul class="phase-activities">
                        <li>Register venture (Cooperative or Pty Ltd)</li>
                        <li>Pilot 5 upcycled product prototypes</li>
                        <li>Test QR-code payments with 10 initial customers</li>
                        <li>Onboard 5 waste suppliers into digital payment system</li>
                    </ul>
                </div>
            </div>

            <div class="roadmap-phase">
                <div class="phase-header">
                    <span class="phase-badge">Phase 2</span>
                    <span class="phase-duration">Months 4-6</span>
                </div>
                <div class="phase-content">
                    <h4 class="phase-title">Funding & Equipment</h4>
                    <ul class="phase-activities">
                        <li>Submit GEP Community Fund/CAP application</li>
                        <li>Request fabrication equipment + POS hardware</li>
                        <li>Secure workspace in township</li>
                        <li>Build relationships with corporate buyers</li>
                    </ul>
                </div>
            </div>

            <div class="roadmap-phase">
                <div class="phase-header">
                    <span class="phase-badge">Phase 3</span>
                    <span class="phase-duration">Months 7-9</span>
                </div>
                <div class="phase-content">
                    <h4 class="phase-title">Operations Launch</h4>
                    <ul class="phase-activities">
                        <li>Install 3D printer, laser cutter, sewing machines</li>
                        <li>Onboard 10 waste suppliers + 20 paying customers</li>
                        <li>Establish digital wallet system</li>
                        <li>Launch first production run (50+ units)</li>
                    </ul>
                </div>
            </div>

            <div class="roadmap-phase">
                <div class="phase-header">
                    <span class="phase-badge">Phase 4</span>
                    <span class="phase-duration">Months 10-12</span>
                </div>
                <div class="phase-content">
                    <h4 class="phase-title">Scale & E-Commerce</h4>
                    <ul class="phase-activities">
                        <li>Launch e-commerce site with integrated payments</li>
                        <li>Scale to wholesale/retail buyers</li>
                        <li>Expand to 20+ suppliers, 100+ customers</li>
                        <li>Develop PWA for township-wide platform</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

